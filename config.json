{
  "voice_system": {
    "language": "el-GR",
    "energy_threshold": 300,
    "speech_rate": 150,
    "speech_volume": 0.9,
    "timeout": 5,
    "phrase_time_limit": 10
  },
  "commands": {
    "greet": ["γεια", "χαίρετε", "hello", "hey"],
    "time": ["την ώρα", "τι ώρα είναι"],
    "date": ["την ημερομηνία", "ποια μέρα είναι"],
    "calculate": ["υπολόγισε"],
    "reminder": ["υπενθύμιση"],
    "stop": ["σταμάτα", "τερμάτισε"]
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}